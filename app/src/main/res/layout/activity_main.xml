<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context="com.example.nonz.spaze.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/courseBtt"
                android:layout_width="85dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/icon_course"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="7dp" />

            <ImageButton
                android:id="@+id/planetBtt"
                android:layout_width="85dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/icon_planet"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="7dp" />

            <ImageButton
                android:id="@+id/mainBtt"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@drawable/icon_main"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/scheduleBtt"
                android:layout_width="83dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_schedule"
                tools:layout_editor_absoluteX="222dp"
                tools:layout_editor_absoluteY="7dp" />

            <ImageButton
                android:id="@+id/setBtt"
                android:layout_width="83dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_setting"
                tools:layout_editor_absoluteX="305dp"
                tools:layout_editor_absoluteY="7dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
